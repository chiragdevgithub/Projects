public  class PrimeNumber {

    public  Integer validateNumber(integer num){
    
    Integer i,flag=0;
                
                for(i=2; i<=num/2; ++i) {
       
                    if(math.mod(num,i)==0) {
                        flag=1;
                        break;
                     }
                 }

    if (flag==0)
       return 1;
    else
       return 0;
    
  
    }
}