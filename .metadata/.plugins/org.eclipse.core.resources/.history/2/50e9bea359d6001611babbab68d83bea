public  class PrimeNumber {

    public void validateNumber(integer num){
    
    Integer i,flag=0;
                
                for(i=2; i<=num/2; ++i) {
       
                    if(math.mod(num,i)==0) {
                        flag=1;
                        break;
                     }
                 }

    if (flag==0)
       system.debug('Prime number');
    else
      system.debug('Not a Prime number');
    
  
    }
}